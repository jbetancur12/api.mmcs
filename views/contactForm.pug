extends base

block content
  style
    | body {
    |   font-family: Arial, sans-serif;
    |   background-color: #f0f0f0;
    |   margin: 0;
    |   padding: 20px;
    | }
    | h1 {
    |   background-color: #333;
    |   color: #fff;
    |   padding: 10px;
    | }
    | ul {
    |   list-style: none;
    |   padding: 0;
    | }
    | li {
    |   margin: 10px 0;
    | }
    | strong {
    |   font-weight: bold;
    |   margin-right: 10px;
    | }

  h1 Datos de Contacto Recibidos

  ul
    li
      strong Nombre:
      | #{name}
    li
      strong Email:
      | #{email_}
    li
      strong Asunto:
      | #{subject_}
    li
      strong Mensaje:
      | #{message}
